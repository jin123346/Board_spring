<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.farmstory.dao.ArticleMapper">

    <insert id="insertArticle">
        insert into article values (#{group}, #{cate}, #{title}, #{content}, #{writer},now());
    </insert>

    <select id="selectArticle" resultType="com.farmstory.dto.ArticleDTO">
        select * from article where boardNo = #{boardNo};
    </select>

    <select id="selectArticles" resultType="com.farmstory.dto.ArticleDTO">
        select * from article where group=#{group} and ;
    </select>

    <update id="updateArticle">
        update `user1` set
        `name` = #{name},
        `birth` = #{birth},
        `hp` = #{hp},
        `age` = #{age}
        where
        `uid` = #{uid};
    </update>
    <delete id="deleteArticle">
        delete from `article` where `boardNo` = #{boardNo};
    </delete>

</mapper>